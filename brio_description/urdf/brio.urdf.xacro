<?xml version="1.0"?>
<robot name="brio" xmlns:xacro="http://ros.org/wiki/xacro">
    <link name="base_link">
    </link>
    <joint name="link_1_joint" type="fixed">
        <parent link="base_link" />
        <child link="link_1" />
    </joint>
    <link name="link_1">
        <visual>
            <geometry>
                <mesh filename="package://brio_description/meshes/brio_l1.stl"
                    scale="0.001 0.001 0.001" />
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
    </link>
    <joint name="link_2_joint" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1" />
        <limit lower="${-pi}" upper="${pi}" effort="0" velocity="0" />
        <parent link="link_1" />
        <child link="link_2" />
    </joint>
    <link name="link_2">
        <visual>
            <geometry>
                <mesh filename="package://brio_description/meshes/brio_l2.stl"
                    scale="0.001 0.001 0.001" />
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
    </link>
    <joint name="link_3_joint" type="prismatic">
        <origin xyz="0.02 0 0.16" />
        <axis xyz="0 0 -1" />
        <limit lower="0" upper="0.1" effort="0" velocity="0" />
        <parent link="link_2" />
        <child link="link_3" />
    </joint>
    <link name="link_3">
        <visual>
            <origin rpy="${pi/2} 0 0" />
            <geometry>
                <mesh filename="package://brio_description/meshes/brio_l3.stl"
                    scale="0.001 0.001 0.001" />
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
    </link>
    <joint name="link_4_joint" type="revolute">
        <origin xyz="0.28 0 -0.012" rpy="0 0 ${pi}" />
        <axis xyz="0 0 1" />
        <limit lower="${-pi}" upper="${pi}" effort="0" velocity="0" />
        <parent link="link_3" />
        <child link="link_4" />
    </joint>
    <link name="link_4">
        <visual>
            <geometry>
                <mesh filename="package://brio_description/meshes/brio_l4.stl"
                    scale="0.001 0.001 0.001" />
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
    </link>
    <joint name="tip_link_joint" type="fixed">
        <origin xyz="0.2 0 0" rpy="0 0 0"/>
        <parent link="link_4" />
        <child link="tip_link" />
    </joint>
    <link name="tip_link">
    </link>
</robot>
